<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtSecurityHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Security"
            android:textStyle="bold"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtSecuritySub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Откаты • Проверки • Аварийный режим"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/txtSecurityHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileRollback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/txtSecuritySub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tileRollbackTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Откат / Отмена изменений"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tileRollbackDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Вернуться к последней удачной конфигурации"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/tileRollbackTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileSnapshots"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tileRollback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tileSnapshotsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Снапшоты"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tileSnapshotsDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Сохранить и восстановить состояние"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/tileSnapshotsTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileIntegrity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tileSnapshots"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tileIntegrityTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Проверки безопасности"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tileIntegrityDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Хеши, подписи, целостность"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/tileIntegrityTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileEmergency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tileIntegrity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tileEmergencyTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Аварийный режим"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tileEmergencyDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Safe mode, отключение последних модулей"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/tileEmergencyTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>