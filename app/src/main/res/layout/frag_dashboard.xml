<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtStatusTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Статус"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/txtMagiskState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Magisk: —"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/txtStatusTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/txtRootState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Root: —"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/txtMagiskState"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/txtZygiskState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Zygisk: —"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/txtRootState"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/txtDenyListState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="DenyList: —"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/txtZygiskState"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txtQuickTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Быстрые действия"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQuick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/txtQuickTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPatch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Патч boot"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnReboot"
                    android:layout_marginEnd="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReboot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Перезагрузка"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnPatch"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInstallMagisk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Установить/Обновить"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/btnPatch"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnReport"
                    android:layout_marginEnd="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Отчёт"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/btnReboot"
                    app:layout_constraintStart_toEndOf="@id/btnInstallMagisk"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txtRecentTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Недавние операции"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardQuick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRecent"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/txtRecentTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentOpsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>