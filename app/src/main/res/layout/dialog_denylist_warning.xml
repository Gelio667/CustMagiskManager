<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:id="@+id/txtWarnTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Внимание"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtWarnBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:text="Эта функция влияет на поведение Magisk.\nПонимайте последствия перед включением." />

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Подождите: 10с" />

    <CheckBox
        android:id="@+id/chkConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:text="Я понимаю риски и хочу продолжить" />
</LinearLayout>